<div class="min-h-screen bg-white flex flex-col font-sans">
  <!-- Hero Section -->
  <div class="relative bg-gradient-to-r from-blue-600 to-indigo-700 overflow-hidden">
    <div class="absolute inset-0">
      <svg class="absolute bottom-0 left-0 transform -translate-x-1/2 translate-y-1/2 w-64 h-64 text-white opacity-10" fill="currentColor" viewBox="0 0 100 100">
        <circle cx="50" cy="50" r="50" />
      </svg>
      <svg class="absolute top-0 right-0 transform translate-x-1/2 -translate-y-1/2 w-64 h-64 text-white opacity-10" fill="currentColor" viewBox="0 0 100 100">
        <circle cx="50" cy="50" r="50" />
      </svg>
    </div>

    <div class="relative max-w-7xl mx-auto py-24 px-4 sm:py-32 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold tracking-tight text-white sm:text-5xl md:text-6xl drop-shadow-sm">
          <span class="block"><%= t('home.index.title') %></span>
          <span class="block text-blue-200 mt-4"><%= t('home.index.subtitle') %></span>
        </h1>
        <p class="mt-8 max-w-lg mx-auto text-xl text-blue-100 sm:max-w-3xl leading-relaxed">
          <%= t('home.index.description').html_safe %>
        </p>
        <div class="mt-10 max-w-sm mx-auto sm:max-w-none sm:flex sm:justify-center">
          <div class="space-y-4 sm:space-y-0 sm:mx-auto sm:inline-grid sm:grid-cols-1 sm:gap-5">
            <%= link_to map_path, class: "flex items-center justify-center px-8 py-4 border border-transparent text-lg font-bold rounded-full shadow-lg text-blue-700 bg-white hover:bg-gray-50 hover:scale-105 transform transition duration-150 ease-in-out md:text-xl" do %>
              <%= t('home.index.cta') %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Features Section (Zig-zag Layout) -->
  <div class="py-24 bg-white overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-20">
        <h2 class="text-base text-blue-600 font-semibold tracking-wide uppercase"><%= t('home.index.features_title') %></h2>
        <p class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl">
          <%= t('home.index.features_subtitle') %>
        </p>
        <p class="mt-4 max-w-2xl text-xl text-gray-500 mx-auto">
          <%= t('home.index.features_description') %>
        </p>
      </div>

      <div class="space-y-24">
        <!-- Feature 1: Text Left, Image Right -->
        <div class="relative lg:grid lg:grid-cols-2 lg:gap-16 lg:items-center">
          <div class="relative">
            <h3 class="text-2xl font-extrabold text-gray-900 tracking-tight sm:text-3xl">
              <%= t('home.index.feature_1_title') %>
            </h3>
            <p class="mt-3 text-lg text-gray-500 leading-relaxed">
              <%= t('home.index.feature_1_description').html_safe %>
            </p>

            <div class="mt-8">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <div class="flex items-center justify-center h-12 w-12 rounded-md bg-blue-500 text-white">
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0121 18.382V7.618a1 1 0 00-.553-.894L15 7m0 13V7m0 0L9 7" />
                    </svg>
                  </div>
                </div>
                <div class="ml-4">
                  <p class="text-base font-medium text-gray-900">簡単アクセス</p>
                  <p class="text-base text-gray-500">ログイン不要ですぐに使えます。</p>
                </div>
              </div>
            </div>
          </div>

          <div class="mt-10 lg:mt-0 relative" aria-hidden="true">
            <img class="relative mx-auto rounded-lg shadow-lg w-full object-cover transform hover:scale-105 transition-transform duration-300" src="https://images.unsplash.com/photo-1516280440614-6697288d5d38?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" alt="Map on phone">
          </div>
        </div>

        <!-- Feature 2: Image Left, Text Right -->
        <div class="relative lg:grid lg:grid-cols-2 lg:gap-16 lg:items-center">
          <div class="mt-10 lg:mt-0 relative lg:order-1" aria-hidden="true">
            <img class="relative mx-auto rounded-lg shadow-lg w-full object-cover transform hover:scale-105 transition-transform duration-300" src="https://images.unsplash.com/photo-1572922736488-8422303030c6?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" alt="Mikoshi">
          </div>

          <div class="relative lg:order-2">
            <h3 class="text-2xl font-extrabold text-gray-900 tracking-tight sm:text-3xl">
              <%= t('home.index.feature_2_title') %>
            </h3>
            <p class="mt-3 text-lg text-gray-500 leading-relaxed">
              <%= t('home.index.feature_2_description').html_safe %>
            </p>

             <div class="mt-8">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <div class="flex items-center justify-center h-12 w-12 rounded-md bg-blue-500 text-white">
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  </div>
                </div>
                <div class="ml-4">
                  <p class="text-base font-medium text-gray-900">リアルタイム位置情報</p>
                  <p class="text-base text-gray-500">屋台の場所が正確にわかります。</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Feature 3: Text Left, Image Right -->
        <div class="relative lg:grid lg:grid-cols-2 lg:gap-16 lg:items-center">
          <div class="relative">
            <h3 class="text-2xl font-extrabold text-gray-900 tracking-tight sm:text-3xl">
              <%= t('home.index.feature_3_title') %>
            </h3>
            <p class="mt-3 text-lg text-gray-500 leading-relaxed">
              <%= t('home.index.feature_3_description').html_safe %>
            </p>

             <div class="mt-8">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <div class="flex items-center justify-center h-12 w-12 rounded-md bg-blue-500 text-white">
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                </div>
                <div class="ml-4">
                  <p class="text-base font-medium text-gray-900">美味しい思い出</p>
                  <p class="text-base text-gray-500">お祭りの味を堪能しましょう。</p>
                </div>
              </div>
            </div>
          </div>

          <div class="mt-10 lg:mt-0 relative" aria-hidden="true">
            <img class="relative mx-auto rounded-lg shadow-lg w-full object-cover transform hover:scale-105 transition-transform duration-300" src="https://images.unsplash.com/photo-1569032519969-955639b7d40e?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" alt="Festival Food">
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom CTA -->
  <div class="bg-gray-50">
    <div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:py-24 lg:px-8 flex flex-col items-center justify-center text-center">
      <h2 class="text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl">
        <span class="block"><%= t('home.index.bottom_cta_title') %></span>
        <span class="block text-blue-600 mt-2">さあ、出かけましょう。</span>
      </h2>
      <div class="mt-8 flex justify-center w-full">
        <div class="inline-flex rounded-md shadow">
          <%= link_to map_path, class: "inline-flex items-center justify-center px-8 py-4 border border-transparent text-lg font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 transition-colors duration-200" do %>
            <%= t('home.index.bottom_cta_button') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
