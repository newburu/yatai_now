<%= form_with(model: [:admin, stall], class: "space-y-6") do |form| %>
  <% if stall.errors.any? %>
    <div class="rounded-md bg-red-50 p-4 mb-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800"><%= pluralize(stall.errors.count, "error") %> prohibited this stall from being saved:</h3>
          <div class="mt-2 text-sm text-red-700">
            <ul role="list" class="list-disc pl-5 space-y-1">
              <% stall.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "屋台名", class: "block text-sm font-medium leading-6 text-gray-900" %>
    <div class="mt-2">
      <%= form.text_field :name, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" %>
    </div>
  </div>

  <div>
    <%= form.label :description, "紹介文", class: "block text-sm font-medium leading-6 text-gray-900" %>
    <div class="mt-2">
      <%= form.text_area :description, rows: 3, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" %>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
    <div class="sm:col-span-3">
      <%= form.label :festival_id, "祭り", class: "block text-sm font-medium leading-6 text-gray-900" %>
      <div class="mt-2">
        <%= form.collection_select :festival_id, Festival.all, :id, :name, { prompt: "祭りを選択" }, { class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" } %>
      </div>
    </div>

    <div class="sm:col-span-3">
      <%= form.label :user_id, "屋台管理者", class: "block text-sm font-medium leading-6 text-gray-900" %>
      <div class="mt-2">
        <%= form.collection_select :user_id, User.manager, :id, :email, { prompt: "担当者を選択" }, { class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" } %>
      </div>
    </div>
  </div>

  <div>
    <%= form.label :status_text, "現在の状況", class: "block text-sm font-medium leading-6 text-gray-900" %>
    <div class="mt-2">
      <%= form.text_field :status_text, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" %>
    </div>
  </div>

  <div>
    <%= form.label :auth_code, "GPS合言葉", class: "block text-sm font-medium leading-6 text-gray-900" %>
    <div class="mt-2">
      <%= form.text_field :auth_code, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" %>
    </div>
    <p class="mt-2 text-sm text-gray-500">通常は自動生成されますが、必要であれば手動で設定できます。</p>
  </div>

  <div class="flex items-center justify-end gap-x-6">
    <%= link_to 'キャンセル', admin_stalls_path, class: "text-sm font-semibold leading-6 text-gray-900" %>
    <%= form.submit "保存", class: "rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 cursor-pointer" %>
  </div>
<% end %>
