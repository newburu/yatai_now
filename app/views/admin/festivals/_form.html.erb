<%= form_with(model: [:admin, festival], class: "space-y-6") do |form| %>
  <% if festival.errors.any? %>
    <div class="rounded-md bg-red-50 p-4 mb-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800"><%= pluralize(festival.errors.count, "error") %> prohibited this festival from being saved:</h3>
          <div class="mt-2 text-sm text-red-700">
            <ul role="list" class="list-disc pl-5 space-y-1">
              <% festival.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "祭り名", class: "block text-sm font-medium leading-6 text-gray-900" %>
    <div class="mt-2">
      <%= form.text_field :name, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" %>
    </div>
  </div>

  <div class="relative flex gap-x-3">
    <div class="flex h-6 items-center">
      <%= form.check_box :is_active, class: "h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-600" %>
    </div>
    <div class="text-sm leading-6">
      <%= form.label :is_active, "開催中", class: "font-medium text-gray-900" %>
      <p class="text-gray-500">有効にすると地図上に表示されます。</p>
    </div>
  </div>

  <div class="relative flex gap-x-3">
    <div class="flex h-6 items-center">
      <%= form.check_box :allow_anonymous_map_updates, class: "h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-600" %>
    </div>
    <div class="text-sm leading-6">
      <%= form.label :allow_anonymous_map_updates, "未ログインユーザーの地図自動更新を許可する", class: "font-medium text-gray-900" %>
      <p class="text-gray-500">チェックを外すと、ログインしていないユーザーは地図を手動で再読み込みする必要があります。</p>
    </div>
  </div>

  <div class="flex items-center justify-end gap-x-6">
    <%= link_to 'キャンセル', admin_festivals_path, class: "text-sm font-semibold leading-6 text-gray-900" %>
    <%= form.submit "保存", class: "rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 cursor-pointer" %>
  </div>
<% end %>
