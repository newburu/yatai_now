<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">アカウント編集</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :email, "メールアドレス", class: "block text-sm font-medium leading-6 text-gray-900" %>
        <div class="mt-2">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" %>
        </div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="text-sm text-gray-600">確認待ちのメールアドレス: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div>
        <%= f.label :password, "新しいパスワード", class: "block text-sm font-medium leading-6 text-gray-900" %>
        <span class="text-xs text-gray-500">（変更しない場合は空欄のまま）</span>
        <% if @minimum_password_length %>
          <span class="text-xs text-gray-500">(<%= @minimum_password_length %>文字以上)</span>
        <% end %>
        <div class="mt-2">
          <%= f.password_field :password, autocomplete: "new-password", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" %>
        </div>
      </div>

      <div>
        <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "block text-sm font-medium leading-6 text-gray-900" %>
        <div class="mt-2">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" %>
        </div>
      </div>

      <div>
        <%= f.label :current_password, "現在のパスワード", class: "block text-sm font-medium leading-6 text-gray-900" %>
        <span class="text-xs text-gray-500">（変更を確認するために入力が必要です）</span>
        <div class="mt-2">
          <%= f.password_field :current_password, autocomplete: "current-password", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" %>
        </div>
      </div>

      <div>
        <%= f.submit "更新する", class: "flex w-full justify-center rounded-md bg-blue-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 cursor-pointer" %>
      </div>
    <% end %>

    <hr class="my-8 border-gray-300">

    <h3 class="text-lg font-semibold text-gray-900">アカウントの削除</h3>
    <p class="text-sm text-gray-500 mt-2">気に入らない場合はアカウントを削除できます。</p>
    <div class="mt-4">
      <%= button_to "アカウントを削除する", registration_path(resource_name), data: { turbo_confirm: "本当にアカウントを削除しますか？" }, method: :delete, class: "text-red-600 hover:text-red-500 text-sm font-semibold cursor-pointer" %>
    </div>

    <div class="mt-6 text-center">
      <%= link_to "戻る", :back, class: "text-sm font-semibold leading-6 text-blue-600 hover:text-blue-500" %>
    </div>
  </div>
</div>
